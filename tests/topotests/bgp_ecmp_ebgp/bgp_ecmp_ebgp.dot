graph bgp_ecmp_ebgp {
    label="BGP ECMP eBGP Topology";

    // Routers
    r1 [
        shape=doubleoctagon,
        label="r1\nAS100",
        fillcolor="#f08080",
        style=filled,
    ];
    r2 [
        shape=doubleoctagon,
        label="r2\nAS200",
        fillcolor="#f08080",
        style=filled,
    ];
    r3 [
        shape=doubleoctagon,
        label="r3\nAS100",
        fillcolor="#f08080",
        style=filled,
    ];

    // Switches
    s1 [
        shape=oval,
        label="s1\n10.0.1.0/24",
        fillcolor="#d0e0d0",
        style=filled,
    ];
    s2 [
        shape=oval,
        label="s2\n10.0.2.0/24",
        fillcolor="#d0e0d0",
        style=filled,
    ];

    // Connections
    r1 -- s1 [label="eth0\n10.0.1.1"];
    r2 -- s1 [label="eth0\n10.0.1.2"];
    r2 -- s2 [label="eth1\n10.0.2.2"];
    r3 -- s2 [label="eth0\n10.0.2.3"];
}
